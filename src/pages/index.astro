---
import Main from "~/components/Main.svelte"
import Layout from "../layouts/Layout.astro"
import { heroText } from "~/styles/home.css"
import Hoverable from "~/components/Hoverable.svelte"
---

<Layout title="Funnier">
	<h1 class={heroText}>
		<span
			style="background: linear-gradient(90deg, #ff1b6b, #45caff);-webkit-background-clip: text;-webkit-text-fill-color: transparent;"
			>Funnier</span
		>🤪: Let's make the world more interesting🤩!
	</h1>
	<p style="font-size: 1.3em;">
		Funnier is a tool🔨 for making text📝 funnier🤪 and more interesting😂.
	</p>
	<a
		style="margin-bottom: 1em;font-size: 1.3em;"
		href="https://github.com/zihan-ch/funnier"
		target="_blank"
	>
		<Hoverable client:idle shadow={true}>
			Star this project on Github❤️
		</Hoverable>
	</a>

	<Main client:idle />
</Layout>
